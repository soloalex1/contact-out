<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Default"
        android:textSize="36sp"
        app:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_weight="0.5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/coluna1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnCall1"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/contactName2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/btnDelete1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        </TableRow>

        <TableRow
            android:id="@+id/coluna2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnCall2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/contactName2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/btnDelete2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        </TableRow>

        <TableRow
            android:id="@+id/coluna3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnCall3"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/contactName3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/btnDelete3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        </TableRow>

        <TableRow
            android:id="@+id/coluna4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnCall4"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/contactName4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/btnDelete4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        </TableRow>

        <TableRow
            android:id="@+id/coluna5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnCall5"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/contactName5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/btnDelete5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/buttonshape"
                android:tint="@android:color/background_light"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />
        </TableRow>
    </TableLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center">

        <Button
            android:id="@+id/btnInsert"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_marginStart="10dp"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnContact"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:tint="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnDial"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_height"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:tint="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>